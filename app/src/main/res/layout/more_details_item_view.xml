<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <TextView
            android:id="@+id/more_details_comm_board_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/more_details_chair_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:id="@+id/more_details_district_manager_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layerType="software"
            android:layout_marginTop="140dp"/>

        <TextView
            android:id="@+id/more_details_board_meeting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layerType="software"
            android:layout_marginTop="210dp"
            />

        <TextView
            android:id="@+id/more_details_cabinet_meeting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:layerType="software"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="5dp"
            />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>